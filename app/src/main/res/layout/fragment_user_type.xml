<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <EditText
        android:id="@+id/et_endday_day"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="2"
        android:hint="日"
        android:inputType="textPersonName"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_endday_month"
        app:layout_constraintEnd_toEndOf="@+id/et_startday_day"
        app:layout_constraintStart_toEndOf="@+id/et_endday_month"
        app:layout_constraintTop_toTopOf="@+id/et_endday_month" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <ImageButton
        android:id="@+id/imgBtn_nextP"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:srcCompat="@drawable/next_white" />

    <ImageButton
        android:id="@+id/imgBtn_previousP"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:srcCompat="@drawable/back_white_black" />

    <ImageButton
        android:id="@+id/imgBtn_back"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_white_black" />

    <TextView
        android:id="@+id/tv_startday"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="30dp"
        android:text="停留起始日期"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_endday"
        app:layout_constraintEnd_toStartOf="@+id/et_startday_year"
        app:layout_constraintStart_toEndOf="@+id/imgBtn_previousP"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_endday"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="停留結束日期"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toStartOf="@+id/et_endday_year"
        app:layout_constraintStart_toStartOf="@+id/tv_startday"
        app:layout_constraintTop_toBottomOf="@+id/tv_startday" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <EditText
        android:id="@+id/et_startday_year"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ems="4"
        android:hint="年"
        android:inputType="textPersonName"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_startday"
        app:layout_constraintEnd_toStartOf="@+id/et_startday_month"
        app:layout_constraintStart_toEndOf="@+id/tv_startday"
        app:layout_constraintTop_toTopOf="@+id/tv_startday" />

    <EditText
        android:id="@+id/et_startday_month"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ems="3"
        android:hint="月"
        android:inputType="textPersonName"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_startday_year"
        app:layout_constraintEnd_toStartOf="@+id/et_startday_day"
        app:layout_constraintStart_toEndOf="@+id/et_startday_year"
        app:layout_constraintTop_toTopOf="@+id/et_startday_year" />

    <EditText
        android:id="@+id/et_startday_day"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="2"
        android:hint="日"
        android:inputType="textPersonName"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_startday_month"
        app:layout_constraintStart_toEndOf="@+id/et_startday_month"
        app:layout_constraintTop_toTopOf="@+id/et_startday_month" />

    <EditText
        android:id="@+id/et_endday_year"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ems="4"
        android:hint="年"
        android:inputType="textPersonName"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_endday"
        app:layout_constraintEnd_toStartOf="@+id/et_endday_month"
        app:layout_constraintStart_toEndOf="@+id/tv_endday"
        app:layout_constraintTop_toTopOf="@+id/tv_endday" />

    <EditText
        android:id="@+id/et_endday_month"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ems="3"
        android:hint="月"
        android:inputType="textPersonName"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_endday_year"
        app:layout_constraintEnd_toStartOf="@+id/et_endday_day"
        app:layout_constraintStart_toEndOf="@+id/et_endday_year"
        app:layout_constraintTop_toTopOf="@+id/et_endday_year" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="承上題"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

</androidx.constraintlayout.widget.ConstraintLayout>